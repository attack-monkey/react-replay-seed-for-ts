{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "only-arrow-functions": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "prefer-const": true,
    "arrow-return-shorthand": true,
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "semicolon": [true, "never"],
    "trailing-comma": false
  },
  "rulesDirectory": []
}